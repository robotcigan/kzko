.btn
  border none
  background $primary
  border-radius 4px
  align-items center
  color #fff
  cursor pointer
  display inline-flex
  font-family $font
  font-size 1.2rem
  font-weight 500
  flex-shrink 0
  justify-content center
  letter-spacing .5px
  line-height 1
  max-height 6.4rem
  margin-left 0
  overflow hidden
  padding 1.8rem 2.4rem
  position relative
  transition $transition
  text-transform uppercase
  vertical-align bottom
    right 0
  &--small
    padding 1.6rem 2.4rem
  &--secondary
    background-color $primary-light
    color $primary
    &:before
      background-color $primary-light - 5%
  &--transparent
    background rgba(#fff, .2)
  &_full
    width 100%
  &_white
    background-color #fff
    color $main
    &:hover
      background-color #fff !important
      color $primary
  &_ghost
    background-color rgba(#fff, .2)
    color #fff
  & + &
    margin-left 2rem
  & + .link
    margin-left 2rem
  &__plate
    position absolute
    top -1.2rem
    right 1.6rem
  img
    circle(1.6rem)
    margin-right 4px
    transform translateY(-250%)
    transition all .3s ease
  &:hover
    background-color $primary - 10%

.flatpickr
  &-month
    margin-bottom 1rem
  &-calendar
    padding 1.5rem 0
    &.arrowTop,
    &.arrowBottom
      &:before,
      &:after
        display none !important

.form-input
  // min-height 5rem
  // flex-shrink 0
  margin-bottom 2rem
  position relative
  width 100%
  label,
  &__input
    color $main
    cursor text
    display inline-block
    line-height 1
    font-weight 400
    margin-bottom .5em
    transition all .2s
    max-width 100%
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="tel"],
  input[type="number"],
  select,
  textarea,
  .custom-select
    background #fff
    border none
    border $border
    border-radius $radius
    color $main
    display block
    font-family $font
    font-size 1.6rem
    line-height 1
    min-height 5rem
    transition border-color .2s
    padding 1.3rem 2.4rem
    position relative
    transition background-color .3s ease
    resize vertical
    width 100%
    -webkit-appearance none
    // &:focus
    //   border-color $primary
    //   & + .form-control__icon
    //     transform rotate(180deg)
    &:hover
      border-color rgba($main, .3)
  textarea
    height 100%
    min-height 18rem
  .nice-select
    float initial
    height initial
    .list
      width 100%
    &.open .list
      transform none
    .option
      font-size 1.2rem
      line-height 1.6
      margin 0
      margin-left 0 !important
      min-height initial
      // padding-left 0
      padding .5em 1em
    &:after
      right 2.4rem
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    select,
    textarea,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-input__icon
      color $error
  &--small
    width 28rem
  &--horizontal
    align-items center
    display flex
    label
      flex-shrink 0
      margin-bottom 0
      width 16rem
    // input
    //   width 50%


.checkbox
  align-items center
  cursor pointer !important
  display flex
  margin-bottom .5rem
  user-select none
  &__label
    background #fff
    border-radius $radius
    border $border
    cursor pointer !important
    display inline-block
    flex-shrink 0
    margin-bottom 0 !important
    margin-right 1.2rem
    position relative
    size(2rem)
    transform translateY(-1px)
    z-index 1
    &:before
      display none !important
    &:after
      color $main
      border none !important
      content url('../../img/checkbox.svg') !important
      display none
      font-size 1.6rem
      left 4px !important
      position absolute
      transform none !important
      top 0 !important
      z-index 10
  &__text
    display inline-block
    font-size 1.6rem !important
    margin-bottom 0 !important
  .link
    display inline-block
    margin-bottom 0
  input
    display none
  input:checked + .checkbox__label
    // border-color $primary
    &:after
      display block

.noUi
  &-horizontal
    background-color transparent
    border none
    box-shadow none
    height initial
    .noUi-handle
      size(2rem)
      top -.9rem
  &-handle
    background #fff
    box-shadow none
    border $border
    border-radius 50%
    cursor move
    cursor -webkit-grab
    cursor grab
    &:before,
    &:after
      display none
  &-base
    background-color #D5D9DB
  &-base,
  &-connects
    height 2px
  &-connect
    background $primary
    box-shadow none
    height 2px


.catalog-slider
  margin-bottom 2.4rem
  margin-top -2rem
  &__values
    display flex
    justify-content space-between
    margin-bottom 1.2rem
    input
      border 1px solid #D5D9DB
      border-radius 4px
      color #1a1a1a
      font-family $font
      font-size 1.2rem
      line-height 1
      padding 0.7rem
      text-align center
      width 6.4rem
      -webkit-appearance none


