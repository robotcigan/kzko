small
  color $gray
  display inline-block
  font-size 1.4rem
  line-height 1.4
  margin-bottom 1.2em

.text-center
  text-align center

@media(max-width 1200px)
  h1, .h1
    font-size 3.2rem
  h2, .h2
    font-size 3.2rem
  p, .p
    font-size 1.4rem
  ul
    li
      &:before
        left -1.2rem
        top .65em

@media(max-width 767px)
  h1, .h1
    font-size 2.8rem
  h2, .h2
    font-size 2.8rem
  h3, .h3
    font-size 2rem
  p
    font-size 1.4rem

@media(max-width 350px)
  h1, .h1
    word-break break-word