p
  // color $second
  display block
  font-size 1.6rem
  line-height (24 / 16)
  margin-bottom 1.2em
  // margin-bottom 1.8rem
  margin-top 0
  & + p
    margin-bottom 1.8rem
  a
    color $primary !important
  .link
    display inline

h1, .h1
  font-family $font
  font-size 4rem
  font-weight 700
  line-height (48 / 40)
  margin-bottom .75em
  margin-top 0

h2, .h2
  font-family $font
  font-size 3.2rem
  font-weight 600
  line-height (40 / 32)
  margin-top 0
  margin-bottom .75em

.h2_center
  text-align center

h3, .h3
  font-family $font
  font-size 3.2rem
  font-weight 600
  line-height (40 / 32)
  margin-bottom .75em
  margin-top 0

h4, .h4
  font-family $font
  font-size 2rem
  font-weight 600
  line-height (24 / 20)
  margin-left 0
  margin-bottom .3em
  margin-top 0

ul
  padding-left 0
  li
    display block
    font-size 1.8rem
    font-weight 300
    // margin-bottom 3.2rem
    line-height 1.4
    margin-bottom 1em
    margin-left 0
    position relative
    vertical-align top
    &:before
      background-color $primary
      border-radius 50%
      circle(.4rem)
      content ''
      display block
      left -2.4rem
      line-height 1
      position absolute
      top .5em

ol
  counter-reset item
  margin-left 0
  padding-left 3.2rem

