.slick
  &-prev,
  &-next
    border $border
    border-radius 50%
    circle(4.8rem)
    content ''
    display block
    top 50%
    &:before
      font-size 2.4rem
      color $main
      transition opacity .3s ease
    &:hover
      &:before
        opacity .3
  &-prev
    left -6.4rem
    &:before
      content url('../../img/slider-arrow.svg')
      display block
      transform scale(-1) translateX(1px)
  &-next
    right -6.4rem
    &:before
      content url('../../img/slider-arrow.svg')
  &-dots
    bottom -3.2rem
    left 0
    li
      margin 0
  // &-dots li button:before
  //   color #fff
  //   // display none
  //   font-size 3.2rem
  //   opacity 1
  &-dots li.slick-active button:before
    color $primary
    opacity 1
  &-dots
    li:before
      display none

.slider
  opacity 0
  transition opacity .5s ease
  .slick-list
    margin-left -1.2rem
    margin-right -1.2rem

.slick-initialized
  opacity 1

