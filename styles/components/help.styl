.help
  background-color #eee
  padding 8rem 0
  .form
    display flex
    max-width 64rem
    &-input
      margin-right 2.4rem
      width calc(60% - 2.4rem)
  .btn
    margin-bottom 2rem
    // width 40%
  small
    display block


@media(max-width 1200px)
  .help
    padding 4rem 0
    .form-input
      width 100%

@media(max-width 1000px)
  .help
    h2
      font-size 2.4rem
      br
        display none