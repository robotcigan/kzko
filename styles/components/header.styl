.breadcrumbs
  margin-bottom .5em
  margin-top 0
  padding-bottom 0

.main-header
  background-color #fff
  margin-bottom 3.2rem
  padding 1.2rem 0
  position sticky
  top 0
  width 100%
  z-index 100
  &__container
    display flex
    justify-content space-between
  &__left
    align-items center
    display flex
  &__right
    align-items center
    display flex
  .logo
    display flex
    flex-shrink 0
    margin-right 4rem
  &__phone
    margin-right 2em
  & + .inner-header
    margin-top -3.2rem

.main-header
  .nav
    align-items center
    display flex
    &__link
      linkHover($primary)
      &:not(:last-child)
        margin-right 1em


@media(max-width 1000px)
  .main-header
    margin-bottom 6.4rem
    .nav
      background-color #fff
      border-top $border
      bottom -4.8rem
      height 4.8rem
      left 0
      padding-left 1.2rem
      position absolute
      width 100%
    &__phone
      margin-right 0
    .btn
      display none
