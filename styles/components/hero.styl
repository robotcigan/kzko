.section-hero
  height 64rem

.hero
  // opacity 0
  margin-top -3.2rem
  height 64rem
  position relative
  &__video-container
    display block
    height 100%
    overflow hidden
    width 100%
    position relative
    &:after
      background-color rgba($main, .6)
      content ''
      height 100%
      left 0
      position absolute
      top 0
      width 100%
      z-index 20
  &__video
    height 100%
    object-fit cover
    width 100%
  &__box
    background-color #f8f8f8
    height 100%
    left 0
    position absolute
    top 0
    width 100%
    z-index 200
  &__align
    top 25%
    position absolute
    width 100%
    z-index 100
  &__container
    max-width 64rem
    .btn
      opacity 0
  &__title
    color #fff
  &__subtitle
    color #fff
    opacity .5