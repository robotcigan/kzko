.cards
  margin-left -1.6rem
  margin-right -1.6rem

.card
  background-color #fff
  margin 0 1.6rem
  position relative
  &__img
    img
      display block
      width 100%
  &__container
    padding 3.2rem 2.4rem
  &__icon-container
    position absolute
    right 2rem
    top 21.6rem
  &__icon
    align-items center
    background-color #DC1A14
    border-radius 50%
    circle(4.8rem)
    display flex
    justify-content center
    position relative
    // right 2rem
    // top 21.6rem
    z-index 10
    &-bg
      background-color #fff
      border-radius 50%
      circle(6.4rem)
      // content ''
      left -.8rem
      position absolute
      top -.8rem
      z-index 10
    img
      max-width 100%
      transform translateY(-1px)
  &__title
    font-size 2.4rem
    font-weight 600
    line-height (28 / 24)
    margin-bottom 1.6rem
  &__list
    margin 0
    margin-bottom 2rem
    padding 0
    li
      font-family $font
      font-size 1.6rem
      margin 0
      margin-left 0 !important
      margin-bottom .5em
      padding 0
      &:before
        display none