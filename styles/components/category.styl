.category
  background-color #fff
  // display block
  display flex
  justify-content center
  overflow hidden
  // padding-top 4rem
  position relative
  &:before
    background-color #fbfbfb
    content ''
    height 100%
    left 0
    position absolute
    top 0
    transition $transition
    width 0
    z-index 0
  &__title
    font-size 2.4rem
    font-weight 600
    line-height (32 / 24)
    transition $transition
    // max-width 24rem
  &__number
    opacity .5
    transition $transition
  &__container
    display flex
    flex-direction column
    justify-content center
    position absolute
    top 2.4rem
    text-align center
    width 100%
  &__img
    position relative
    transition $transition
    z-index 10
  &:hover
    &:before
      width 100%
    .category
      // &__img
      //   transform scale(1.05)
      &__title
        color $primary
      &__number
        opacity 1

