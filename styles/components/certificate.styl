.certificate
  display block
  &__img
    align-items center
    background-color #fff
    display flex
    justify-content center
    margin-bottom 1.6rem
    height 32rem
    padding 3.2rem
    position relative
    &:before
      align-items center
      background-color rgba($main, .5)
      border-radius 50%
      bottom 0
      content url('../../img/scale-icon.svg')
      display flex
      justify-content center
      left 0
      margin auto
      opacity 0
      position absolute
      right 0
      size(6.4rem)
      transition $transition
      transform translateY(1rem)
      top 0
    img
      display block
      height 100%
      max-width 20rem
      object-fit contain
      width 100%
  &__title
    line-height 1.2
  &:hover
    .certificate
      &__img
        &:before
          opacity 1
          transform none