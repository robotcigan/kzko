.leasing-detail
  border-top $border
  margin-bottom 2.4rem
  &__line
    border-bottom $border
    display flex
    &-left
      border-right $border
      color $second
      font-size 2.4rem
      flex-shrink 0
      padding-bottom 1em
      padding-top 1em
      width 40%
    &-right
      font-size 2.4rem
      font-weight 600
      padding-left 2em
      padding-bottom 1em
      padding-top 1em


.leasing-detail-img-block
  position sticky
  top 9.6rem

.leasing-detail-img
  align-items center
  background-color #fff
  display flex
  justify-content center
  height 22rem
  img
    max-width 80%

.leasing-detail-img-text
  background-color #eee
  line-height 1.4
  padding 1.6rem 3.2rem







@media(max-width 767px)
  .leasing-detail
    &__line
      &-left
        font-size 1.6rem
      &-right
        font-size 1.6rem
        padding-left 1em



