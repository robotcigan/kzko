.cardpage
  &__img
    margin-bottom 2.4rem
    max-height 56rem
    overflow hidden
    img
      display block
      object-fit contain
      object-position center
      height 100%
      width 100%
    .slick-slide
      height 56rem
    &-nav
      margin 0 -.8rem
      &__item
        cursor pointer
        height 8rem
        overflow hidden
        padding 0 .8rem
      .slick
        &-prev,
        &-next
          border none
        &-prev
          left -4rem
        &-next
          right -4rem
  &__price
    font-size 4rem
    margin-bottom .5em
  &__buttons
    margin-bottom 2.4rem
  &-download
    background-color #FFCE21
    border-radius $radius
    display inline-block
    min-width 28rem
    // overflow hidden
    padding 1.6rem 2.4rem
    position relative
    &__text
      font-weight 600
      line-height 1.2
      max-width 10rem
      transition $transition
    &__img
      bottom 0
      overflow hidden
      position absolute
      right 2.4rem
      img
        display block
        transition $transition
        transform translateY(4px)
    &:hover
      .cardpage-download
        &__img
          img
            transform none
        &__text
          opacity .8


.cardpage
  .info-item
    &__label
      font-size 1.2rem

.leasing
  background-color #fff
  &__container
    padding 4rem
  &__name
    font-size 2.4rem
    font-weight 600
    line-height 1.2
    margin-bottom .75em
  &__bottom
    background-color #eee
    padding 2rem 4rem
    p
      margin-bottom 0

.work-process
  display block
  position relative
  &:before
    background-color #D5D9DB
    content ''
    height 100%
    left 1.9rem
    opacity 1
    position absolute
    transition $transition2
    transition-delay 1s
    width 3px
    z-index 0
  &__item
    align-items center
    display flex
    margin-bottom 1.2rem
    position relative
    z-index 10
  &__number
    align-items center
    background-color $primary
    border-radius 50%
    color #fff
    display flex
    justify-content center
    flex-shrink 0
    margin-right 1.6rem
    size(4rem)
  &__text
    font-size 2rem

.process-whatsapp
  background-color #DEEFE4
  padding 4rem
  &__icon
    margin-bottom 4rem
  &__text
    margin-bottom 1em
  &__phone
    display block
    color #15BF45
    font-size 4.8rem
    font-weight 600


.another-service
  border-radius $radius
  display block
  overflow hidden
  position relative
  &__img
    transition $transition
    img
      display block
      width 100%
  &__container
    display flex
    flex-direction column
    justify-content space-between
    height 100%
    left 0
    padding 3.2rem
    position absolute
    top 0
    width 100%
  &__title
    font-size 1.8rem
    font-weight 600
    transition $transition
  &__number
    font-size 1.4rem
    opacity .5
  &_white-text
    color #fff
  &:hover
    .another-service
      &__img
        opacity .9
      &__title
        opacity .7


@media(max-width 1200px)
  .cardpage
    &__img
      max-height 36rem
      .slick-slide
        height 36rem
  .another-service
    &__container
      padding 1.6rem
  .leasing
    &__container
      padding 2.4rem
    &__bottom
      padding 2rem 2.4rem
    &__title
      font-size 1.8rem
  .work-process
    &__text
      font-size 1.6rem
  .process-whatsapp
    &__phone
      font-size 3.2rem
      
@media(max-width 1440px)
  .process-whatsapp
    &__phone
      font-size 3.2rem

@media(max-width 1000px)
  .cardpage
    &__img
      max-height 28rem
      .slick-slide
        height 28rem

@media(max-width 767px)
  .cardpage
    &__buttons
      .btn
        margin-bottom 1rem
        & + .btn
          margin-left 0
    &__img
      max-height 24rem
      .slick-slide
        height 24rem