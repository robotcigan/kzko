.project-list .project-item
  background-size cover
  position relative

.project-list .project-item .project-bottom .project-title
  color #fff
  font-size 2.4rem

.project-item:before
    content ''
    background linear-gradient(0, black, transparent)
    position absolute
    width 100%
    height 100%
    left 0
    opacity .6
    top 0

.project-list .project-item:hover
  background-size cover
